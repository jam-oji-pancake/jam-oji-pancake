<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand btn btn-outline-dark" href="/public/homes/top" ><span>LOGO</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if custmer_signed_in? %>
              <li><%= link_to 'マイページ', public_customers_show_path,class: "btn btn-outline-secondary text-dark" %></li>
              <li><%= link_to '商品一覧', public_items_index_path,class: "btn btn-outline-secondary text-dark" %></li>
              <li><%= link_to 'カート', public_carts_my_cart_path,class: "btn btn-outline-secondary text-dark" %></li>
              <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete,class: "btn btn-outline-secondary text-dark" %></li>
            <% elsif admin_signed_in? %>
              <li><%= link_to '商品一覧', admins_items_index_path,class: "btn btn-outline-secondary text-dark" %></li>
              <li><%= link_to '会員一覧', admins_customers_index_path,class: "btn btn-outline-secondary text-dark" %></li>
              <li><%= link_to '注文一覧', admins_orders_index_path,class: "btn btn-outline-secondary text-dark" %></li>
              <li><%= link_to 'ジャンル一覧', admins_genres_index_path,class: "btn btn-outline-secondary text-dark" %></li>
              <li><%= link_to 'ログアウト', destroy_custmer_session_path, method: :delete,class: "btn btn-outline-secondary text-dark" %></li>
            <% else %>
              <li><%= link_to 'About', public_homes_about_path,class: "btn btn-outline-secondary text-dark" %></li>
              <li><%= link_to '商品一覧', public_items_index_path,class: "btn btn-outline-secondary text-dark" %></li>
              <li><%= link_to '新規登録', new_custmer_registration_path,class: "btn btn-outline-secondary text-dark" %></li>
              <li><%= link_to 'ログイン', new_custmer_session_path,class: "btn btn-outline-secondary text-dark" %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
    </footer>
  </body>
</html>

