<h2>商品詳細</h2>
<div>
  <%= attachment_image_tag(@item, :image, :fill, 100, 100) %>
</div>

<div>
  <%= @item.name %>
</div>

<div>
  <%= @item.introduction %>
</div>

<div>
  ¥<%= @item.price %>円(税込）
</div>


<%= form_with model:@cart, local:true do |f| %>
<%= form_with model:@cart, url: carts_path, local:true do |f| %>
<%= f.select :count, [["１", "1"], ["2", "2"],["3", "3"]], include_blank: "個数選択" %>
<%= f.hidden_field :item_id, :value => @item.id %>
<%= f.submit 'カートに入れる'%>
<% end %>


