<div class="ml-5">
<h2>配送先編集</h2>
<%= render 'layouts/error', errorinstance: @delivery %>

<%= form_with model:@delivery, local:true do |f| %>
        <table class="ml-4">
            <thead></thead>
            <tbody>
              <tr>
                <div class="field">
                 <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
                 <td><%= f.text_field :post_code%></td>
                </div>
              </tr>

              <tr>
                <div class="field">
                 <td><%= f.label :"住所" %> </td>
                 <td><%= f.text_field :address %></td>
                </div>
              </tr>

              <tr>
                <div class="field">
                  <td><%= f.label :"宛名" %></td>
                  <td><%= f.text_field :name%></td>
                </div>
              </tr>
            </tbody>
          </table>
      <%= f.submit '変更内容を保存' %>
<% end %>
</div>