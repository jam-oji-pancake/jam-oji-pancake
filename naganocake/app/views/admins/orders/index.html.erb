<h2>
  <td>注文履歴一覧</td>
</h2>
  <table class='table'>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td>
          <%= link_to admins_customer_path(customer.id) do %>
            <%= customer.first_name %><%= customer.last_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td><%= customer.is_valid %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div><%= paginate @orders%></div>


