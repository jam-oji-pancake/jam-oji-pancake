<div class="container">
  <div class="row">
    <h2>ショッピングカート</h2>

    <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% @sum = 0 %>
    <% @cart_list.each do |carts| %>
      <tr>
        <td>
          <%= attachment_image_tag(carts.item, :image, :fill, 50, 50, fallback: "no_image.jpg") %>
          <%= carts.item.name %>
        </td>
        <td><%= carts.item.price %></td>
        <td><%= carts.count %></td>
        <td><%= (carts.subtotal_price).to_i %></td>
        <!--%= (carts.item.price).to_i %>*%= (carts.count).to_i %>-->
        <td><%= link_to '削除', delete_item_path(carts), method: :delete, data: { confirm: '商品をカートから削除しますか？' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
      <% @sum += (carts.subtotal_price).to_i %>
    <% end %>
    </tbody>

    <table class="table">
      <thead>合計金額</thead>
      <tbody><%= @sum  %></tbody>
    </table>


  </div>
</div>