<div class="ml-5">
<h2>配送先登録 / 一覧</h2>
<%= render 'layouts/error', errorinstance: @customer %>
<%= render 'layouts/error', errorinstance: @delivery %>

<%= form_with model:@delivery, local:true do |f| %>
        <table class="ml-4">
            <thead></thead>
            <tbody>
              <tr>
                <div class="field">
                 <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
                 <td><%= f.text_field :post_code, :placeholder => "0000000" %></td>
                </div>
              </tr>

              <tr>
                <div class="field">
                 <td><%= f.label :"住所" %> </td>
                 <td><%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0" %></td>
                </div>
              </tr>

              <tr>
                <div class="field">
                  <td><%= f.label :"宛名" %></td>
                  <td><%= f.text_field :name, :placeholder => "令和道子" %></td>
                </div>
              </tr>
            </tbody>
          </table>
      <%= f.submit '新規登録' %>
<% end %>
<table class="table table-hover mt-4 w-75">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr class="mr-3 mb-5">
        <td><%= delivery.post_code %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.name %></td>
        <td><%= link_to '編集する', edit_delivery_path(delivery.id),class: "btn btn-success text-white"%></td>
        <td><%= link_to '削除する', delivery_path(delivery.id),class: "btn btn btn-danger text-white",method: :delete,"data-confirm" => "本当に削除しますか" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>