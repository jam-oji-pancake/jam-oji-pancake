
<div class="container">
  <div class="row">
    <div><h4>注文情報入力</h4></div>
  </div>
  <%= render 'layouts/error', errorinstance: @order %>
  <div class="row">
    <div class= "col-10">
      <h5>支払い方法</h5>
        <%= form_with model:@order, url:confirm_path, local:true do |f| %>
        <p class="ml-3">
          <%= f.radio_button :payment, 'クレジットカード' %>
          <%= f.label :payment, 'クレジットカード', value: 'クレジットカード' %>
        </p>
        <p class="ml-3">
          <%= f.radio_button :payment, '銀行振込' %>
          <%= f.label :payment, '銀行振込', value: '銀行振込' %>
        </p>  
        
    
      <h5>お届け先</h5>
        <h6 class="ml-3"><%= f.radio_button :delivery_adress, '0' %><%= f.label :delivery_adress, 'ご自身の住所', value: 0 %></h6>
          <p class="ml-4">
             <%= @customer.post_code %>
             <%= @customer.address %>
             <%= @customer.first_name %> <%= @customer.last_name %>
          </p>
        <h6 class="ml-3"><%= f.radio_button :delivery_adress, '1' %><%= f.label :delivery_adress, '登録済み住所から選択', value: 1 %></h6>
          <p class="ml-4"><%= f.collection_select :order_delivery, @deliveries, :id, :view_post_address_name %></p>
        <h6 class="ml-3"> <%= f.radio_button :delivery_adress, '2' %><%= f.label :delivery_adress, '新しいお届け先', value: 2 %></h6>

        <table class="ml-4">
            <thead></thead>
            <tbody>
              <tr>
                <div class="field">
                 <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
                 <td><%= f.text_field :post_code, :placeholder => "0000000" %></td>
                </div>
              </tr>
          
              <tr>
                <div class="field">
                 <td><%= f.label :"住所" %> </td>
                 <td><%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0" %></td>
                </div>
              </tr>
          
              <tr>
                <div class="field">
                  <td><%= f.label :"宛名" %></td>
                  <td><%= f.text_field :name, :placeholder => "令和道子" %></td>
                </div>
              </tr>
            </tbody>
          </table>
          <div class="mt-sm-4">
           <%= f.submit '注文確認画面へ進む', class: "btn btn-primary" %>
           <% end %>
         </div>
    </div>
  </div>


</div>
