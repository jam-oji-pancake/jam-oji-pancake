<h2>商品新規登録</h2>
<%= render 'layouts/error', errorinstance: @item %>
<%= form_with model:@item,url: admins_items_path(@item.id),  local:true do |f| %>

<!--<div>商品画像</div>-->
<div class="form-group">
  <%= f.label :image %>
  <%= f.attachment_field :image, class: "form-control-file image" %>
</div>

<div class="form-group">
  <%= f.label :商品名 %>
  <%= f.text_field :name, placeholder: "商品名" %>
</div>

<div class="form-group">
  <%= f.label :商品説明 %>
  <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
</div>

<div class="form-group">
  <%= f.label :ジャンル %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name, :prompt => "選択してください" ) %>
  <!--%= f.collection_select(:genre, :name, Genre.all, :id, :name, :prompt => "選択してください" ) %>-->

</div>

<div class="form-group">
  <%= f.label :税抜き価格 %>
  <%= f.text_field :price, placeholder: "1000" %> 円
</div>

<div class="form-group">

  <%= f.label :販売ステータス %>
  <%= f.radio_button "is_sale","販売中", checked: true%>
  <%= f.label "is_sale", "販売中" %>
  <%= f.radio_button "is_sale","販売停止中" %>
  <%= f.label "is_sale", "販売停止中" %>

  <!--%= f.label :販売ステータス %>-->
  <!--%= f.radio_button :is_sale, true, checked: true %>-->
  <!--%= f.label :is_sale, "販売中", value: true %>-->

  <!--%= f.radio_button :is_sale, false %>-->
  <!--%= f.label :is_sale, "販売停止中", value: false %>-->
</div>

<div class="form-group">
  <%= f.submit '新規投稿', class: 'btn btn-success' %>
</div>

<% end %>