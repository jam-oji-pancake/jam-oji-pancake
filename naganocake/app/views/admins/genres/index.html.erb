<h2>ジャンル一覧・追加</h2>

<div>
  <!--%= form_with model:@genre, url:"admins_genres_path", local:true do |f| %>-->
  <%= form_with model:[:admins, @genre], local:true do |f| %>
  
  <p>ジャンル名</p>
  <%= f.text_field :name %>
  <%= f.submit "新規登録" %>
  <% end %>
</div>


<table class>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td>
        <%= link_to "編集する", edit_admins_genre_path(genre) %>
      </td>
    </tr>
    <% end %>
  </tbody>


</table>

