<h2>商品詳細</h2>
<div>
  <%= attachment_image_tag(@item, :image, :fill, 100, 100) %>
</div>

<div>
  <%= @item.name %>
</div>

<div>
  <%= @item.introduction %>
</div>

<div>
  ¥<%= @item.price %>円(税込）
</div>

<%= form_with model:@cart, local:true do |f| %>

<%= f.hidden_field :item_id, value: @item.id %>
<%= f.select :count, [["1", "1"], ["2", "2"]], include_blank: "個数選択" %>
<%= f.submit 'カートに入れる'%>
<% end %>
