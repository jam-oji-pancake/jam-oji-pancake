<div class="ml-5">
<h2 class="mb-3"> 新規会員登録</h2>
<%= flash[:error] %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>

  <table>
    <thead></thead>
    <tbody>
      <tr>
        <div class="field">
         <td><%= f.label :"名前" %>　　　　　　　　　　　<%= f.label :"(姓)" %> </td>
         <td><%= f.text_field :first_name, autofocus: true %>　　　<%= f.label :"(名)" %> </td>
         <td><%= f.text_field :last_name, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label :"フリガナ" %>　　　　　　　　<%= f.label :"(セイ)" %></td>
          <td><%= f.text_field :first_kana, autofocus: true %>　　<%= f.label :"(メイ)" %> </td>
          <td><%= f.text_field :last_kana, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label :"メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
        <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
        <td><%= f.text_field :post_code, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
         <td> <%= f.label :"住所" %></td>
         <td> <%= f.text_field :address, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
         <td><%= f.label :"電話番号(ハイフンなし)" %></td>
         <td><%= f.text_field :phone, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td>
            <%= f.label :"パスワード" %>
            <% if @minimum_password_length %>
            (<%= @minimum_password_length %>文字以上)
            <% end %>
          </td>
          <td>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </div>
      </tr>

      <tr class="mb-5">
        <div class="field">
          <td><%= f.label :"パスワード (確認用)" %></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </div>
      </tr>

      <tr>
        <div class="actions">
          <td>　</td>
          <td> <%= f.submit "新規登録",class:"btn btn-success btn-lg btn-block" %></td>
        </div>
      <% end %>
      </tr>

    </tbody>
  </table>


<h2>既に登録済の方</h2>
 <td><%= render "public/customers/shared/links" %></td>

</div>