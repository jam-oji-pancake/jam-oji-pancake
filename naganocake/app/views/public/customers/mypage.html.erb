<div class="ml-5">
<h2>マイページ</h2>
<h4>登録情報　<%= link_to '編集する', mypage_edit_path,class: "btn btn-success text-white" %></h4>

  <table class="table w-25">
    <thead>
    </thead>
    <tbody>
      <tr>
        <td>氏名</td>
        <td><%= @customer.first_name %><%= @customer.last_name %></td>
      </tr>

      <tr>
        <td>カナ</td>
        <td><%= @customer.first_kana %><%= @customer.last_kana %></td>
      </tr>

      <tr>
        <td>郵便番号</td>
        <td><%= @customer.post_code %></td>
      </tr>

      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>

      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone %></td>
      </tr>

      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>

    </tbody>
  </table>

