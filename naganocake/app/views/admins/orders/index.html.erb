    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td>
          <%= link_to admins_customer_path(customer.id) do %>
            <%= customer.first_name %><%= customer.last_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td><%= customer.is_valid %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div><%= paginate @orders%></div>





