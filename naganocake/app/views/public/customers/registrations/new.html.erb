<h2>Sign up</h2>
<%= flash[:error] %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>

  <table>
    <thead></thead>
    <tbody>
      <tr>
        <div class="field">
         <td><%= f.label :"名前" %></td>
         <td><%= f.label :"(姓)" %> <%= f.text_field :first_name, autofocus: true %></td>
         <td><%= f.label :"(名)" %> <%= f.text_field :last_name, autofocus: true %></td>
        </div>
      </tr>
  
      <tr>
        <div class="field">
          <td><%= f.label :"フリガナ" %></td>
          <td><%= f.label :"(セイ)" %><%= f.text_field :first_kana, autofocus: true %></td>
          <td><%= f.label :"(メイ)" %> <%= f.text_field :last_kana, autofocus: true %></td>
        </div>
      </tr>
  
      <tr>
        <div class="field">
          <td><%= f.label :"メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </div>
      </tr>
  
      <tr>
        <div class="field">
        <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
        <td><%= f.text_field :post_code, autofocus: true %></td>
        </div>
      </tr>
  
      <tr>
        <div class="field">
         <td> <%= f.label :"住所" %></td>
         <td> <%= f.text_field :address, autofocus: true %></td>
        </div>
      </tr>
  
      <tr>
        <div class="field">
         <td><%= f.label :"電話番号(ハイフンなし)" %></td>
         <td><%= f.text_field :phone, autofocus: true %></td>
        </div>
      </tr>
      
      <tr>
        <div class="field">
          <td>
            <%= f.label :"パスワード" %>
            <% if @minimum_password_length %>
            (<%= @minimum_password_length %>文字以上)
            <% end %>
          </td>
          <td>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </div>
      </tr>
      
      <tr>
        <div class="field">
          <td><%= f.label :"パスワード (確認用)" %></td>  
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>  
        </div>      
      </tr>
      
      <tr>
        <div class="actions">
          <td> <%= f.submit "Sign up" %></td>
        </div>
      <% end %>
      </tr>
  
    </tbody>
  </table>
  

  
  <%= render "public/customers/shared/links" %>
