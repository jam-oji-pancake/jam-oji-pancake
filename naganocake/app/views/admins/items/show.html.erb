<h2 class="ml-5 mb-5 ">商品詳細</h2>
<div class="container">
  <div class="row">


    <div class = "col-4">
      <div>
        <%= attachment_image_tag(@item, :image, :fill, 300, 300) %>
      </div>
    </div>

    <div class = "col-8">
      <table>
        <thead></thead>
        <tbody>
            <tr class="mb-5">
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>

            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>

            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>

            <tr>
              <td>税込価格（税抜価格）</td>
              <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
            </tr>

            <tr>
              <td>販売ステータス</td>
              <td><%= @item.is_sale %></td>
            </tr>

            <tr>
               <td><%= link_to '編集する', edit_admins_item_path(@item), class: 'btn btn-success' %></td>
            </tr>
        </tbody>
      </table>
      </div>
    </div>
  </div>