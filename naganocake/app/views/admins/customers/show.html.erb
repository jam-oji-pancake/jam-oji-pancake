<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h2>

  <table>
    <tbody>

      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>

      <tr>
        <td>氏名</td>
        <td><%= @customer.first_name %> <%= @customer.last_name %></td>
      </tr>

      <tr>
        <td>フリガナ</td>
        <td><%= @customer.first_kana %> <%= @customer.last_kana %></td>
      </tr>

      <tr>
        <td>郵便番号</td>
        <td><%= @customer.post_code %></td>
      </tr>

      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>

      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone %></td>
      </tr>

      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>

      <tr>
        <td>会員ステータス</td>
        <td><%= @customer.is_valid %></td>
      </tr>

    </tbody>
  </table>

<div>
  <td><%= link_to '編集する',edit_admins_customer_path,class: "btn btn-outline-secondary text-dark" %></td>
  <td><%= link_to '注文履歴一覧を見る（リンク先未作成）', mypage_edit_path,class: "btn btn-outline-secondary text-dark" %></td>
</div>