<div class="ml-5">
<h2>
  <td>注文履歴一覧</td>
</h2>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
      <td>
        <%= link_to admins_order_path(order.id) do %>
        <%= order.created_at.to_s(:datetime_jp) %>
        <% end %>
      </td>
        <td>
          <%= link_to admins_customer_path(order.customer.id) do %>
            <%= order.customer.first_name %><%= order.customer.last_name %>
          <% end %>
        </td>
        <td><%= order.total_count %></td>
        <td><%= order.order_status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div><%= paginate @orders_all%></div>
</div>