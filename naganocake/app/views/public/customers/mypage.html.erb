  <table>
    <thead>
    </thead>
    <tbody>
      <tr>
        <td>氏名</td>
        <td><%= @customer.first_name %><%= @customer.last_name %></td>
      </tr>

      <tr>
        <td>カナ</td>
        <td><%= @customer.first_kana %><%= @customer.last_kana %></td>
      </tr>

