<div class="container">
  <div class="row">
  
  <div class='col-3'>
    <table class="table border">
          <tr><th>ジャンル</th></tr>
          <% @genres.each do |genre| %>
          <tr ><td><%= genre.name %><td></tr>
          <% end %>
    </table>
  </div>

  <div class='col-9'>
    <h2>商品一覧</h2><h4>全<%= @all_items.count %>件</h4>

    <div class="d-flex flex-wrap">
    <% @items.each do |item| %>
      <div>
        <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag(item, :image, :fill, 100, 150, fallback: "no_image.jpg") %>
        <p><%= item.name %></p>
        <% end %>
        <p><%= item.add_tax_price.to_s(:delimited) %>円
        <!--%= item.add_tax_price.to_s(:delimited) %> 円-->
      </div>
    <% end %>
    </div>
    <%= paginate @items %>
  </div>
  
  </div>
</div>