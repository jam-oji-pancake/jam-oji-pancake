<div class="ml-5">
<h2>登録情報編集</h2>
<%= render 'layouts/error', errorinstance: @customer %>
<%= form_with model:@customer, local:true do |f| %>
 <table>
    <thead></thead>
    <tbody>
      <tr>
        <div class="field">
         <td><%= f.label :"名前" %>　　　　　　　　　<%= f.label :"(姓)" %> </td>
         <td><%= f.text_field :first_name, autofocus: true %>　　　　<%= f.label :"(名)" %></td>
         <td><%= f.text_field :last_name, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field ">
          <td><%= f.label :"フリガナ" %>　　　　　　<%= f.label :"(セイ)" %></td>
          <td><%= f.text_field :first_kana, autofocus: true %>　　　<%= f.label :"(メイ)" %> </td>
          <td><%= f.text_field :last_kana, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label :"メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
        <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
        <td><%= f.text_field :post_code, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
         <td> <%= f.label :"住所" %></td>
         <td> <%= f.text_field :address, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
         <td><%= f.label :"電話番号(ハイフンなし)" %></td>
         <td><%= f.text_field :phone, autofocus: true %></td>
        </div>
      </tr>

      <tr class="mt-5">
        <div class="actions">
          <td> <%= f.submit "更新" %></td>
          <td><%= link_to '退会する', mypage_cation_path,class: "btn btn-outline-secondary text-dark" %></td>
        </div>
      </tr>

    </tbody>
  </table>
  <% end %>
</div>
